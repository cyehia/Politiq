            @Html.DisplayFor(modelItem => item.ShortTile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preamble)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LegislationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LegislationID }) |
