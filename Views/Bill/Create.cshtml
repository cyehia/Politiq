@model Politiq.Models.ObjectModel.NewLegislationView

@{
    ViewBag.Title = "Create";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //$("#nav").wijmenu();
           // $("#logindisplay a").button();
            $(":input[type='submit']").button();
            $(":input[type='checkbox']").wijcheckbox();
            $(":input[type='radio']").wijradio();
            $(":input[type='text'],:input[type='password'],textarea").wijtextbox();
        });
    </script>
}

<h2>Create</h2>



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>NewLegislationView</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.BillType)
        </div>
        <div class="editor-field">
            <select name="BillType">
                <option value="1">Public Bill</option>
                <option value="2">Private Member's Bill</option>
            </select>

            @Html.ValidationMessageFor(model => model.BillType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LongTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LongTitle)
            @Html.ValidationMessageFor(model => model.LongTitle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ShortTile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ShortTile)
            @Html.ValidationMessageFor(model => model.ShortTile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Preamble)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Preamble)
            @Html.ValidationMessageFor(model => model.Preamble)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
